#!/bin/bash

basedir=`dirname $0`
cd $basedir
. ../../setup-env.sh

rm -fr  pmu_statsfile.txt stats_dump.iss.0 pa_dump.core.0 ./bin gaussian3x3_hvx128_out.bin gaussian3x3_hvx64_out.bin
mkdir -p bin
mkdir -p profile

g++-4.8 --std=c++11  -DLOG2VLEN=7 -DRUN=1 -DASSEMBLY=1 -DBITCODE=1 -I $HALIDE_ROOT/include -fno-rtti -O3 -g src/gaussian3x3_simple_generator.cpp $HALIDE_ROOT/tools/GenGen.cpp -L$HALIDE_ROOT/lib -lHalide -o bin/gaussian3x3_generator -ldl -lpthread -lz

export LD_LIBRARY_PATH=$HALIDE_ROOT/lib:; ./bin/gaussian3x3_generator -o bin -g gaussian3x3 -e o,h,assembly,bitcode -f gaussian3x3_hvx64 target=hexagon-32-noos-no_bounds_query-no_asserts-hvx_64
export LD_LIBRARY_PATH=$HALIDE_ROOT/lib:; ./bin/gaussian3x3_generator -o bin -g gaussian3x3 -e o,h,assembly,bitcode -f gaussian3x3_hvx128 target=hexagon-32-noos-no_bounds_query-no_asserts-hvx_128
ar q bin/gaussian3x3_filters.a bin/gaussian3x3_hvx64.o bin/gaussian3x3_hvx128.o

hexagon-clang++ --std=c++11 -c -mhvx -mhvx-length=128B -mv66 -DLOG2VLEN=7 -I $HALIDE_ROOT/include -I ./bin -I ./baseline  src/gaussian3x3_run.cpp -o bin/gaussian3x3_run.o

hexagon-clang++ -mhvx -mhvx-length=128B -mv66 -DLOG2VLEN=7 bin/gaussian3x3_run.o bin/gaussian3x3_filters.a -lhexagon -L$HALIDE_ROOT/lib -lsim_qurt $HALIDE_ROOT/Examples/support/stubs.c -o bin/gaussian3x3.out

if [ ! -z "${RUN_WITHOUT_TIMING}" ]; then
	printf "\nRunning simulator without --timing flag...\n"
	hexagon-sim bin/gaussian3x3.out -mv66 --memfill 0x0 --simulated_returnval --nullptr=2 -- 1920 1080 ../../testvectors/football1920x1080.bin out.bin
fi

printf "\nRunning simulator with --timing flag...\n"
hexagon-sim bin/gaussian3x3.out -mv66 --memfill 0x0 --simulated_returnval --nullptr=2 --timing --packet_analyze profile/gaussian3x3_simple.json -- 1920 1080 ../../testvectors/football1920x1080.bin out.bin

hexagon-profiler --packet_analyze --elf=bin/gaussian3x3.out --json=profile/gaussian3x3_simple.json -o profile/gaussian3x3_simple.html

rm -fr stats_dump.iss.0 stats_dump.iss.1 pa_dump.core.0 pa_dump.core.1 pmu_statsfile.txt