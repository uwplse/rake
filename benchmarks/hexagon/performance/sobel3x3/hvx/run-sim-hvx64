#!/bin/bash

CXX=/home/maaz/Qualcomm/Hexagon_SDK/3.5.1/tools/HEXAGON_Tools/8.3.07/Tools/bin/hexagon-clang
SIM=/home/maaz/Qualcomm/Hexagon_SDK/3.5.1/tools/HEXAGON_Tools/8.3.07/Tools/bin/hexagon-sim

rm -rf build
mkdir build
rm -rf ref_build
mkdir ref_build

$CXX -O2 -mv66 -mhvx -mhvx-length=128B -DLOG2VLEN=6 -I/home/maaz/Qualcomm/Hexagon_SDK/3.5.1/tools/HEXAGON_Tools/8.3.07/Examples/HVX/common/include -DQDSP6SS_PUB_BASE=0xFE200000 -c -o build/sobel.o src/sobel.c

$CXX -O2 -mv66 -mhvx -mhvx-length=128B -DLOG2VLEN=6 -I/home/maaz/Qualcomm/Hexagon_SDK/3.5.1/tools/HEXAGON_Tools/8.3.07/Examples/HVX/common/include -DQDSP6SS_PUB_BASE=0xFE200000 -c -o build/test.o src/test.c

$CXX -O2 -mv66 -mhvx -mhvx-length=128B -DLOG2VLEN=6 -I/home/maaz/Qualcomm/Hexagon_SDK/3.5.1/tools/HEXAGON_Tools/8.3.07/Examples/HVX/common/include -DQDSP6SS_PUB_BASE=0xFE200000 -c -o build/subsys.o /home/maaz/Qualcomm/Hexagon_SDK/3.5.1/tools/HEXAGON_Tools/8.3.07/Examples/HVX/common/src/subsys.c

$CXX -O2 -mv66 -o build/sobel.exe ./build/sobel.o ./build/test.o ./build/subsys.o  -lhexagon

gcc -Wall -O3 -I/home/maaz/Qualcomm/Hexagon_SDK/3.5.1/tools/HEXAGON_Tools/8.3.07/Examples/HVX/common/include -c -o ref_build/sobel_ref.o src/sobel_ref.c

gcc -Wall -O3 -I/home/maaz/Qualcomm/Hexagon_SDK/3.5.1/tools/HEXAGON_Tools/8.3.07/Examples/HVX/common/include -c -o ref_build/test.o src/test.c

gcc -o ref_build/sobel.exe ./ref_build/sobel_ref.o ./ref_build/test.o -lm

# run reference
./ref_build/sobel.exe 1920 1080 ../../testvectors/football1920x1080.bin ./ref_build/out.bin

printf "\nRunning simulator without --timing flag...\n"
$SIM -mv66 --memfill 0x0 --simulated_returnval --nullptr=2 -- ./build/sobel.exe 1920 1080 ../../testvectors/football1920x1080.bin ./build/out.bin

printf "\nRunning simulator with --timing flag...\n"
$SIM -mv66 --memfill 0x0 --simulated_returnval --nullptr=2 --timing -- ./build/sobel.exe 1920 1080 ../../testvectors/football1920x1080.bin ./build/out.bin

# compare outputs
cmp ./build/out.bin ./ref_build/out.bin

# delete unnecessary files
rm pmu_statsfile.txt stats_dump.iss.0