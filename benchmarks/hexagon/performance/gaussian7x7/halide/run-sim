#!/bin/bash

basedir=`dirname $0`
cd $basedir
. ../../setup-env.sh

rm -fr  pmu_statsfile.txt stats_dump.iss.0 pa_dump.core.0 ./bin gaussian7x7_hvx128_out.bin gaussian7x7_hvx64_out.bin
mkdir -p bin
mkdir -p profile

g++-4.8 --std=c++11  -DLOG2VLEN=7 -DRUN=1 -DASSEMBLY=1 -DBITCODE=1 -I $HALIDE_ROOT/include -fno-rtti -O3 -g src/gaussian7x7_generator.cpp $HALIDE_ROOT/tools/GenGen.cpp -L$HALIDE_ROOT/lib -lHalide -o bin/gaussian7x7_generator -ldl -lpthread -lz

export LD_LIBRARY_PATH=$HALIDE_ROOT/lib:; ./bin/gaussian7x7_generator -o bin -g gaussian7x7 -e o,h,assembly,bitcode -f gaussian7x7_hvx64 target=hexagon-32-noos-no_bounds_query-no_asserts-hvx_64
export LD_LIBRARY_PATH=$HALIDE_ROOT/lib:; ./bin/gaussian7x7_generator -o bin -g gaussian7x7 -e o,h,assembly,bitcode -f gaussian7x7_hvx128 target=hexagon-32-noos-no_bounds_query-no_asserts-hvx_128
ar q bin/gaussian7x7_filters.a bin/gaussian7x7_hvx64.o bin/gaussian7x7_hvx128.o

hexagon-clang++ --std=c++11 -c -mhvx -mhvx-length=128B -mv66 -DLOG2VLEN=7 -I $HALIDE_ROOT/include -I ./bin -I ./baseline  src/gaussian7x7_run.cpp -o bin/gaussian7x7_run.o

hexagon-clang++ -mhvx -mhvx-length=128B -mv66 -DLOG2VLEN=7 bin/gaussian7x7_run.o bin/gaussian7x7_filters.a -lhexagon -L$HALIDE_ROOT/lib -lsim_qurt $HALIDE_ROOT/Examples/support/stubs.c -o bin/gaussian7x7.out

if [ ! -z "${RUN_WITHOUT_TIMING}" ]; then
	printf "\nRunning simulator without --timing flag...\n"
	hexagon-sim bin/gaussian7x7.out -mv66 --memfill 0x0 --simulated_returnval --nullptr=2 -- 1920 1080 ../../testvectors/football1920x1080.bin out.bin
fi

printf "\nRunning simulator with --timing flag...\n"
hexagon-sim bin/gaussian7x7.out -mv66 --memfill 0x0 --simulated_returnval --nullptr=2 --timing --packet_analyze profile/gaussian7x7.json -- 1920 1080 ../../testvectors/football1920x1080.bin out.bin

hexagon-profiler --packet_analyze --elf=bin/gaussian7x7.out --json=profile/gaussian7x7.json -o profile/gaussian7x7.html

rm -fr stats_dump.iss.0 stats_dump.iss.1 pa_dump.core.0 pa_dump.core.1 pmu_statsfile.txt