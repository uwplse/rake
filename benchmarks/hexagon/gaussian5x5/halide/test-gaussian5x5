#!/bin/bash

basedir=`dirname $0`
cd $basedir
. ../../setup-env.sh
set -x

rm -fr  pmu_statsfile.txt stats_dump.iss.0 pa_dump.core.0 ./bin gaussian5x5_hvx128_out.bin gaussian5x5_hvx64_out.bin
mkdir bin

# Use to print IR
#g++ --std=c++11  -DLOG2VLEN=7 -DRUN=1 -DASSEMBLY=1 -DBITCODE=1 -I /home/maaz/Desktop/Research/rake/halide/distrib/include -I /home/maaz/Desktop/Research/rake/halide/distrib/tools -fno-rtti -O3 -g gaussian5x5_generator.cpp $HALIDE_ROOT/tools/GenGen.cpp -L/home/maaz/Desktop/Research/rake/halide/distrib/lib  -lHalide -o bin/gaussian5x5_generator -ldl -lpthread -lz  -lz -lrt -ltinfo

g++-4.8 --std=c++11  -DLOG2VLEN=7 -DRUN=1 -DASSEMBLY=1 -DBITCODE=1 -I $HALIDE_ROOT/include -fno-rtti -O3 -g gaussian5x5_generator.cpp $HALIDE_ROOT/tools/GenGen.cpp -L$HALIDE_ROOT/lib  -lHalide -o bin/gaussian5x5_generator -ldl -lpthread -lz

export LD_LIBRARY_PATH=$HALIDE_ROOT/lib:; ./bin/gaussian5x5_generator -o bin -g gaussian5x5 -e o,h,assembly,bitcode -f gaussian5x5_hvx64 target=hexagon-32-noos-no_bounds_query-no_asserts-hvx_64
export LD_LIBRARY_PATH=$HALIDE_ROOT/lib:; ./bin/gaussian5x5_generator -o bin -g gaussian5x5 -e o,h,assembly,bitcode -f gaussian5x5_hvx128 target=hexagon-32-noos-no_bounds_query-no_asserts-hvx_128
ar q bin/gaussian5x5_filters.a bin/gaussian5x5_hvx64.o bin/gaussian5x5_hvx128.o

hexagon-clang++ --std=c++11 -c -mhvx -mhvx-length=128B -mv60 -DLOG2VLEN=7 -I $HALIDE_ROOT/include -I ./bin -I ./baseline  gaussian5x5_run.cpp -o bin/gaussian5x5_run.o

hexagon-clang++ -mhvx -mhvx-length=128B -mv60 -DLOG2VLEN=7 bin/gaussian5x5_run.o bin/gaussian5x5_filters.a -lhexagon -L$HALIDE_ROOT/lib -lsim_qurt $HALIDE_ROOT/Examples/support/stubs.c -o bin/gaussian5x5.out

hexagon-sim bin/gaussian5x5.out --memfill 0x0 --simulated_returnval --timing --nullptr=2 -- 1920 1080 ../../testvectors/football1920x1080.bin out.bin

rm -fr  pmu_statsfile.txt stats_dump.iss.0 stats_dump.iss.1 pa_dump.core.0 ./bin pa_dump.core.1 #gaussian5x5_hvx64_out.bin gaussian5x5_hvx128_out.bin